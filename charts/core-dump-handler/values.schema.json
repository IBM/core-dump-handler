{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/CoreDumpValues",
    "definitions": {
        "CoreDumpValues": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
                "replicaCount": {
                    "type": "integer"
                },
                "image": {
                    "$ref": "#/definitions/Image"
                },
                "imagePullSecrets": {
                    "type": "array",
                    "items": {}
                },
                "nameOverride": {
                    "type": "string"
                },
                "fullnameOverride": {
                    "type": "string"
                },
                "hostStorage": {
                    "type": "string"
                },
                "coreStorage": {
                    "type": "string"
                },
                "storageClass": {
                    "type": "string"
                },
                "daemonset": {
                    "$ref": "#/definitions/Daemonset"
                },
                "serviceAccount": {
                    "$ref": "#/definitions/ServiceAccount"
                },
                "clusterRole": {
                    "$ref": "#/definitions/ClusterRole"
                },
                "clusterRoleBinding": {
                    "$ref": "#/definitions/ClusterRole"
                },
                "nodeSelector": {
                    "$ref": "#/definitions/Affinity"
                },
                "affinity": {
                    "$ref": "#/definitions/Affinity"
                },
                "tolerations": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Affinity"
                    }
                }
            },
            "required": [
                "affinity",
                "clusterRole",
                "clusterRoleBinding",
                "daemonset",
                "fullnameOverride",
                "image",
                "imagePullSecrets",
                "nameOverride",
                "nodeSelector",
                "replicaCount",
                "serviceAccount",
                "hostStorage",
                "coreStorage",
                "storageClass",
                "tolerations"
            ],
            "title": "CoreDumpValues"
        },
        "Affinity": {
            "type": "object",
            "additionalProperties": true,
            "title": "Affinity"
        },
        "ClusterRole": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
                "name": {
                    "type": "string"
                }
            },
            "required": [
                "name"
            ],
            "title": "ClusterRole"
        },
        "Composer": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "filenameTemplate": {
                    "type": "string"
                },
                "logLength": {
                    "type": "integer",
                    "minimum": 2000
                },
                "logLevel": {
                    "type": "string"
                },
                "ignoreCrio": {
                    "type": "boolean"
                },
                "includeProcInfo": {
                    "type": "boolean"
                },
                "crioImageCmd": {
                    "type": "string"
                },
                "podSelectorLabel": {
                    "type": "string"
                },
                "timeout": {
                    "type": "integer",
                    "minimum": 120
                },
                "compression": {
                    "type": "boolean"
                },
                "coreEvents": {
                    "type": "boolean"
                }
            },
            "required": [
                "crioImageCmd",
                "ignoreCrio",
                "includeProcInfo",
                "logLevel",
                "logLength",
                "filenameTemplate",
                "timeout",
                "compression",
                "coreEvents"
            ],
            "title": "Composer"
        },
        "Daemonset": {
            "type": "object",
            "additionalProperties": false,
            "not": {
                "anyOf": [
                    {
                        "required": [
                            "interval",
                            "schedule"
                        ]
                    },
                    {
                        "required": [
                            "schedule",
                            "useINotify"
                        ]
                    },
                    {
                        "required": [
                            "useINotify",
                            "interval"
                        ]
                    }
                ]
            },
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "manageStoreSecret": {
                                "const": true
                            }
                        },
                        "required": [
                            "manageStoreSecret"
                        ]
                    },
                    "then": {
                        "required": [
                            "s3AccessKey",
                            "s3BucketName",
                            "s3Region",
                            "s3Secret"
                        ]
                    }
                },
                {
                    "if": {
                        "properties": {
                            "mountContainerRuntimeEndpoint": {
                                "const": true
                            }
                        },
                        "required": [
                            "hostContainerRuntimeEndpoint"
                        ]
                    }
                }
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "label": {
                    "type": "string"
                },
                "hostDirectory": {
                    "type": "string"
                },
                "coreDirectory": {
                    "type": "string"
                },
                "eventDirectory": {
                    "type": "string"
                },
                "suidDumpable": {
                    "type": "integer"
                },
                "vendor": {
                    "type": "string"
                },
                "interval": {
                    "type": "integer",
                    "minimum": 1000
                },
                "schedule": {
                    "type": "string"
                },
                "useINotify": {
                    "type": "boolean"
                },
                "deployCrioConfig": {
                    "type": "boolean"
                },
                "crioEndpoint": {
                    "type": "string"
                },
                "mountContainerRuntimeEndpoint": {
                    "type": "boolean"
                },
                "hostContainerRuntimeEndpoint": {
                    "type": "string"
                },
                "includeCrioExe": {
                    "type": "boolean"
                },
                "manageStoreSecret": {
                    "type": "boolean"
                },
                "s3AccessKey": {
                    "type": "string"
                },
                "s3Secret": {
                    "type": "string"
                },
                "s3BucketName": {
                    "type": "string"
                },
                "s3Region": {
                    "type": "string"
                },
                "extraEnvVars": {
                    "type": "string"
                },
                "envFrom": {
                    "type": "array"
                },
                "sidecarContainers": {
                    "type": "array"
                },
                "updateStrategy": {
                    "type": "object"
                }
            },
            "required": [
                "deployCrioConfig",
                "extraEnvVars",
                "hostDirectory",
                "coreDirectory",
                "eventDirectory",
                "includeCrioExe",
                "label",
                "manageStoreSecret",
                "name",
                "suidDumpable",
                "vendor"
            ],
            "title": "Daemonset"
        },
        "Image": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
                "repository": {
                    "type": "string"
                },
                "pullPolicy": {
                    "type": "string"
                },
                "request_mem": {
                    "type": "string"
                },
                "request_cpu": {
                    "type": "string"
                },
                "limit_mem": {
                    "type": "string"
                },
                "limit_cpu": {
                    "type": "string"
                }
            },
            "required": [
                "limit_cpu",
                "limit_mem",
                "pullPolicy",
                "repository",
                "request_cpu",
                "request_mem"
            ],
            "title": "Image"
        },
        "ServiceAccount": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
                "create": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                },
                "annotations": {
                    "type": "object"
                }
            },
            "required": [
                "create",
                "name"
            ],
            "title": "ServiceAccount"
        }
    }
}
